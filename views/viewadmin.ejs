
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="<%= desc %>">
    <meta name="author" content="<%= author %>">
	  <title><%= title %></title>
    <link rel="stylesheet" href="../css/bootstrap.css">
    <link rel="stylesheet" href="../css/font-awesome.css">
    <link rel="stylesheet" href="../css/dataTables.bootstrap4.css">
    <link href="../css/dashboard.css" rel="stylesheet">
  </head> 

  <body>
    <nav class="navbar navbar-expand-lg navbar-light  navbar-dark fixed-top bg-dark my-nav fixed-top">
      
        <a class="navbar-brand" href="/">
        <img src="../img/logo.jpg" width="30" height="30" class="d-inline-block align-top" alt="">
        <%= title %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="/admin/dashboard" data-toggle="tooltip" title="Home"><i class="fa fa-home" aria-hidden="true"></i> Home <span class="sr-only">(current)</span></a>
              </li>
          </ul>
          <ul class="navbar-nav navbar-right">
            <li class="nav-item ">
              <a class="nav-link " href="/admin/dashboard"><i class="fa fa-tachometer" aria-hidden="true"></i> Overview </a>
              </li>
              <% if(user.globalAdmin == true){%>
              <li class="nav-item ">
              <a class="nav-link" href="/admin/addadmin" ><i class="fa fa-user-plus" aria-hidden="true"></i>  Add Admins</a>
            </li>

            <li class="nav-item active">
              <a class="nav-link" href="/admin/viewadmin"><i class="fa fa-user" aria-hidden="true"></i>  View Admins</a>
            </li>
            <%}%>
            <li class="nav-item ">
              <a class="nav-link" href="/admin/settings"><i class="fa fa-cog" aria-hidden="true"></i>  Settings</a>
            </li>
            <li class="nav-item ">
              <a class="nav-link" href="#" data-toggle="modal" data-target="#logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a>
            </li>
          </ul>
          
        </div>
      
  </nav>

    <div class="container-fluid">
      <div class="row">


        <main class="col-sm-12 ml-sm-auto col-md-12 pt-3 grey" role="main">
      
         
          <h3><%= user.name
          %> Administrator Dashboard</h3>




          <div class="card mb-3">
            <div class="card-header">
              <i class="fa fa-table"></i> Admin Details
            </div>

            <div class="card-body">
              <div class="table-responsive">
                <%if(dataPool){%>
                  <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email Address</th>
                        <th>Global Admin</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Name</th>
                        <th>Username</th>
                        <th>Email Address</th>
                        <th>Global Admin</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <%for(admin in dataPool){%>
                          <tr>
                            <td><%= dataPool[admin].name %></td>
                            <td><%= dataPool[admin].username %></td>
                            <td><%= dataPool[admin].email %></td>
                            <td><%= dataPool[admin].globalAdmin %></td>
                          </tr>
                      <%}%>
                    </tbody>
                  </table>
                <%}%>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>


    <!-- modals -->

<div class="modal fade " id="logout" tabindex="-1" role="dialog" aria-labelledby="logout" aria-hidden="true">
  <div class="modal-dialog modal-md" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addadminmodal">  Are you sure you want to logout?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
      </div>
      <div class="modal-body">
        <button type="button" class="btn btn-danger my-btn" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary my-btn"  id="logout">Confirm</button>
      </div>
      
    </div>
  </div>
  </div>
</div>

    <script src="../js/jquery-2.1.4.min.js"></script>
    <script src="../js/popper.min.js"></script>
    <script src="../js/bootstrap.js"></script>
    <script src="../js/jquery.dataTables.js"></script>
    <script src="../js/dataTables.bootstrap4.js"></script>
    <script src="../js/sb-admin-datatables.js"></script>
    <script src="../js/scripts.js"></script>
  </body>
</html>
